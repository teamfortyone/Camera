<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Caption"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".captionActivity">


<!--    <de.hdodenhof.circleimageview.CircleImageView-->

    <ImageView
        android:id="@+id/imgV"
        android:layout_width="289dp"
        android:layout_height="258dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="300dp"
        android:contentDescription="Image preview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:background="@color/colorBlueDark"
        android:gravity="center_horizontal"
        android:text="Generated Captions "
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/capList"
        app:layout_constraintEnd_toEndOf="@+id/imgV"
        app:layout_constraintStart_toStartOf="@+id/imgV"
        app:layout_constraintTop_toBottomOf="@+id/imgV"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:id="@+id/capList"
        android:layout_width="285dp"
        android:layout_height="147dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgV"
        app:layout_constraintVertical_bias="0.274">

    </ListView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/spkbeamk3"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorRed"
        android:drawableEnd="@drawable/vectorspeak"
        android:drawableRight="@drawable/vectorspeak"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/capList"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/capList"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/spkbeamk5"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorRed"
        android:drawableEnd="@drawable/vectorspeak"
        android:drawableRight="@drawable/vectorspeak"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/capList"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/capList"
        app:layout_constraintTop_toBottomOf="@+id/spkbeamk3"
        app:layout_constraintVertical_bias="0.19999999" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/spkgreedy"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorRed"
        android:drawableEnd="@drawable/vectorspeak"
        android:drawableRight="@drawable/vectorspeak"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/capList"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/capList"
        app:layout_constraintTop_toBottomOf="@+id/spkbeamk5"
        app:layout_constraintVertical_bias="0.55" />

    <view
        android:id="@+id/view2"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="64dp"
        android:layout_height="147dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="@+id/capList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/capList"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>